{
  "name": "sportmaster-bot",
  "functions": {
    "pages/api/webhook/telegram.js": {
      "maxDuration": 60
    },
    "pages/api/manual/**/*.js": {
      "maxDuration": 60
    },
    "pages/api/cron/hype.js": {
      "maxDuration": 240
    },
    "pages/api/cron/results.js": {
      "maxDuration": 240
    },
    "pages/api/cron/promo.js": {
      "maxDuration": 240
    },
    "pages/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "regions": ["cle1"],
  "crons": [
    {
      "path": "/api/cron/daily-setup",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/hype",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/news",
      "schedule": "30 10 * * *"
    },
    {
      "path": "/api/cron/news",
      "schedule": "0 12 * * *"
    },
    {
      "path": "/api/cron/news",
      "schedule": "0 16 * * *"
    },
    {
      "path": "/api/cron/news",
      "schedule": "0 19 * * *"
    },
    {
      "path": "/api/cron/check-timing",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/results", 
      "schedule": "0 21 * * *"
    },
    {
      "path": "/api/cron/promo",
      "schedule": "0 10,14,18 * * *"
    },
    {
      "path": "/api/cron/summary",
      "schedule": "0 21 * * *"
    }
    ,
    {
      "path": "/api/cron/live-status",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/channel-stats",
      "schedule": "*/30 * * * *"
    }
    ,
    { "path": "/api/cron/aviator/quick-tip", "schedule": "5 10 * * *" },
    { "path": "/api/cron/aviator/session-plan", "schedule": "0 13 * * *" },
    { "path": "/api/cron/aviator/session-plan", "schedule": "0 18 * * *" },
    { "path": "/api/cron/aviator/promo", "schedule": "5 21 * * *" },
    { "path": "/api/cron/aviator/quick-tip", "schedule": "15 9 * * *" },
    { "path": "/api/cron/aviator/quick-tip", "schedule": "0 15 * * *" },
    { "path": "/api/cron/aviator/promo", "schedule": "30 19 * * *" }
  ]
}
